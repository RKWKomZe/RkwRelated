<T3DataStructure>
    <sheets>
        <filteroptions>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.filter_options</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.startingPid>
                        <TCEforms>
                            <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.startingPid</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.startingPid>
                    <settings.pidList>
                        <TCEforms>
                            <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.pidList</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>5</size>
                                <maxitems>9999</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.pidList>
                    <settings.pidListRecursive>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.pidListRecursive</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.pidListRecursive>
                    <settings.ignoreVisibility>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.ignoreVisibility</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.ignoreVisibility>
                    <settings.documentTypeList>
                        <TCEforms>
                            <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.documenttype</label>
                            <config>
                                <size>5</size>
                                <maxitems>99</maxitems>
                                <minitems>0</minitems>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <foreign_table>tx_rkwbasics_domain_model_documenttype</foreign_table>
                                <foreign_table_where>
                                    AND tx_rkwbasics_domain_model_documenttype.sys_language_uid = ###REC_FIELD_sys_language_uid### AND tx_rkwbasics_domain_model_documenttype.type != "events" AND tx_rkwbasics_domain_model_documenttype.deleted = 0 AND tx_rkwbasics_domain_model_documenttype.hidden = 0 ORDER BY tx_rkwbasics_domain_model_documenttype.name
                                </foreign_table_where>
                                <enableMultiSelectFilterTextfield>true</enableMultiSelectFilterTextfield>
                            </config>
                        </TCEforms>
                    </settings.documentTypeList>
                    <settings.departmentList>
                        <TCEforms>
                            <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.department</label>
                            <config>
                                <size>5</size>
                                <maxitems>5</maxitems>
                                <minitems>0</minitems>
                                <type>select</type>
                                <renderType>selectMultipleSideBySide</renderType>
                                <foreign_table>tx_rkwbasics_domain_model_department</foreign_table>
                                <foreign_table_where>
                                    AND tx_rkwbasics_domain_model_department.sys_language_uid = ###REC_FIELD_sys_language_uid### AND tx_rkwbasics_domain_model_department.deleted = 0 AND tx_rkwbasics_domain_model_department.hidden = 0 ORDER BY tx_rkwbasics_domain_model_department.name
                                </foreign_table_where>
                                <enableMultiSelectFilterTextfield>true</enableMultiSelectFilterTextfield>
                            </config>
                        </TCEforms>
                    </settings.departmentList>
                    <settings.categoriesList>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.categories</label>
                            <config>
                                <type>select</type>
                                <renderType>selectTree</renderType>
                                <autoSizeMax>50</autoSizeMax>
                                <foreign_table>sys_category</foreign_table>
                                <foreign_table_where> AND sys_category.sys_language_uid IN (-1, 0) ORDER BY sys_category.title ASC</foreign_table_where>
                                <maxitems>9999</maxitems>
                                <renderMode>tree</renderMode>
                                <size>10</size>
                                <treeConfig>
                                    <appearance>
                                        <expandAll>1</expandAll>
                                        <showHeader>1</showHeader>
                                    </appearance>
                                    <parentField>parent</parentField>
                                </treeConfig>
                            </config>
                            <!-- do only show it, if it's configured! -->
                            <displayCond>USER:RKW\RkwRelated\UserFunctions\FlexForm->categoryTreeVisibility</displayCond>
                        </TCEforms>
                    </settings.categoriesList>
                    <settings.noCache>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.no_cache</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.noCache>
                </el>
            </ROOT>
        </filteroptions>
        <frontendoptions>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.frontend_options</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.layout>
                        <TCEforms>
                            <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.layout</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.layout.I.default</numIndex>
                                        <numIndex index="1">Default</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.layout.I.home</numIndex>
                                        <numIndex index="1">Home</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.layout.I.reduced</numIndex>
                                        <numIndex index="1">Reduced</numIndex>
                                    </numIndex>
                                    <!--<numIndex index="3" type="array">
                                        <numIndex index="0">LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.layout.I.below</numIndex>
                                        <numIndex index="1">Below</numIndex>
                                    </numIndex>-->
                                </items>
                            </config>
                        </TCEforms>
                    </settings.layout>
                    <settings.imageOnly>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.imageOnly</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.imageOnly>
                    <settings.showMoreLink>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.showMorelink</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.showMoreLink>
                    <settings.itemsPerPage>
                        <TCEforms>
                            <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.itemsPerPage</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>4</max>
                                <eval>trim,int</eval>
                            </config>
                        </TCEforms>
                    </settings.itemsPerPage>
                    <!-- <settings.openLinksInSameWindow>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.openWindow</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.openLinksInSameWindow>-->
                </el>
            </ROOT>
        </frontendoptions>

        <frontendfilteroptions>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.frontend_filter_options</sheetTitle>
                    <displayCond>FIELD:frontendoptions.settings.layout:=:Default</displayCond>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.showFilter>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.showFilter</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.showFilter>
                    <settings.showDepartment>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.showDepartment</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.showDepartment>
                    <settings.showDocumentType>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.showDocumentType</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.showDocumentType>
                    <settings.showCategory>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.showCategory</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.showCategory>
                    <settings.showYear>
                        <label>LLL:EXT:rkw_related/Resources/Private/Language/locallang_db.xlf:flexform.more.showYear</label>
                        <config>
                            <type>check</type>
                        </config>
                    </settings.showYear>
                </el>
            </ROOT>
        </frontendfilteroptions>
    </sheets>
</T3DataStructure>
